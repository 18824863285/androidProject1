<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="304px"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="68px"
        android:layout_height="68px"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/morentupian"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:failureImage="@drawable/morentupian"
        fresco:failureImageScaleType="centerCrop"
        android:id="@+id/head_img_tx"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10px"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18px"
        android:text="D6460(D6459续杯)"
        android:layout_marginLeft="97px"
        android:layout_marginTop="5px"
        android:id="@+id/good_name1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="16px"
        android:text="吊牌价：¥208"
        android:layout_marginLeft="97px"
        android:layout_marginTop="30px"
        android:id="@+id/dpj"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DAB866"
        android:textSize="16px"
        android:text="折扣价：¥100"
        android:layout_marginLeft="97px"
        android:layout_marginTop="60px"
        android:id="@+id/zkj"
        />

    <com.gangxiang.aiDaiOrder.widght.FluidLayout
        android:id="@+id/fluidLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="102px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        />
</RelativeLayout>