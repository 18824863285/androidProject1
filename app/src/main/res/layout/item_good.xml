<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <RelativeLayout
        android:layout_width="304px"
        android:layout_height="match_parent"
        android:layout_marginLeft="30px"
        android:background="#ffffff"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_good_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80px"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:background="#DAB866"
            >
            <View
                android:layout_width="2px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:background="#ffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14px"
                android:text="数量:100"
                android:layout_marginLeft="31px"
                android:layout_marginTop="18px"
                android:id="@+id/spzsl"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14px"
                android:text="单价:¥200"
                android:layout_marginLeft="31px"
                android:layout_marginTop="48px"
                android:id="@+id/dj"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="18px"
                android:text="合计:¥20000"
                android:layout_marginRight="31px"
                android:layout_marginTop="18px"
                android:layout_alignParentRight="true"
                android:id="@+id/hj"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14px"
                android:text="预计6月上旬出货"
                android:layout_marginLeft="31px"
                android:layout_marginTop="48px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="31px"
                android:id="@+id/yjshsj"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>