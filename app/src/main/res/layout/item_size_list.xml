<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="69px">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69px"
        >
        <TextView
            android:layout_width="80px"
            android:layout_height="30px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:text="70/S"
            android:textSize="14px"
            android:textColor="#000000"
            android:background="@drawable/bg_cc"
            android:gravity="center"
            android:id="@+id/tv_sice"
            />

        <TextView
            android:layout_width="40px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="+"
            android:textSize="30px"
            android:gravity="center"
            android:layout_marginRight="10px"
            android:textColor="#313133"
            android:id="@+id/jia"
            />

        <EditText
            android:layout_width="50px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="123"
            android:textColor="#DAB866"
            android:textSize="16px"
            android:id="@+id/sp_num"
            android:digits="0123456789"
            android:background="@null"
            android:inputType="number"
            />

        <RelativeLayout
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="130px"
            android:gravity="center"
            android:text="-"
            android:textSize="35px"
            android:id="@+id/jian">

            <View
                android:layout_width="15px"
                android:layout_height="2px"
                android:background="#313133" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>